# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, x):
#         self.val = x
#         self.next = None

class Solution:
    def addTwoNumbers(self, l1: ListNode, l2: ListNode) -> ListNode:
        flag = 0
        
        l3 = ListNode(0)
        y = l3
        while l1 != None or l2 != None:
            l3.val = l1.val + l2.val +  flag
            
            if l3.val > 9:
                l3.val -= 10
                flag = 1
            else:
                flag = 0
 
            if l1.next == None:
                l1.next = ListNode(0)
            
            if l2.next == None:
                l2.next = ListNode(0)
        
            l1 = l1.next
            l2 = l2.next
            
            if l1.val == 0 and l2.val == 0:
                if l1.next == None and l2.next == None:
                    break
            l3.next = ListNode(0)
            l3 = l3.next
            
        if flag == 1:
            l3.next = ListNode(0)
            l3 = l3.next
            l3.val = 1
        
       
            
        
        return y
